<odoo>
    <data>


        <record id="pos_session_wags_form_view_ext" model="ir.ui.view">
            <field name="name">pos.session.wags</field>
            <field name="model">pos.session.wags</field>
            <field name="priority" eval="50"/>
            <field name="inherit_id" ref="pos_wags.pos_session_wags_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet//group//group[@name='sales']" position="after">
                    <group string="Cash" >
                        <field name="cash_in_move_id" readonly="1" force_save="1"/>
                        <field name="cash_out_move_id" readonly="1" force_save="1"/>
                    </group>
                </xpath>
                <xpath expr="//page[@name='payment_methods']" position="after">
                    <page name="cash_transactions" string="Cash Transactions" invisible="1">
                    <button name="fetch_cash_transactions" type="object" class="oe_highlight" string="Fetch Cash Transactions"/>
                        <field name="cash_transaction_ids">
                            <tree editable="bottom" create="0" edit="0" delete="0">
                                <field name="type"/>
                                <field name="account_id"/>
                                <field name="amount"/>
                            </tree>
                        </field>
                    </page>
                    <page name="opening_closing_cash" string="Opening Closing Cash" invisible="1">
                    <button name="fetch_open_close_transactions" type="object" class="oe_highlight" string="Fetch Opening Closing Cash"/>
                        <field name="open_close_cash_ids">
                            <tree editable="bottom" create="0" edit="0" delete="0">
                                <field name="type"/>
                                <field name="account_id"/>
                                <field name="amount"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>



        <record id="view_cash_transactions_wizard" model="ir.ui.view">
            <field name="name">cash.transactions.wags</field>
            <field name="model">cash.transactions.wags</field>
            <field name="type">tree</field>
            <field name="priority" eval="50"/>
            <field name="arch" type="xml">
                <tree string="Transactions" default_order="datetime desc, id desc" create="0" edit="0" delete="0">
                    <header>
                        <button name="select_transactions" string="Select Transactions" type="object" class="oe_highlight"/>
                    </header>
                    <field name="type"/>
                    <field name="date"/>
                    <field name="datetime"/>
                    <field name="cashbox_id"/>
                    <field name="category_id"/>
                    <field name="narration"/>
                    <field name="amount"/>
                </tree>
            </field>
        </record>


        <record id="view_cash_transactions_opening_wizard" model="ir.ui.view">
            <field name="name">cash.transactions.wags</field>
            <field name="model">cash.transactions.wags</field>
            <field name="type">tree</field>
            <field name="priority" eval="50"/>
            <field name="arch" type="xml">
                <tree string="Transactions" default_order="datetime desc, id desc" create="0" edit="0" delete="0">
                    <header>
                        <button name="select_open_close_transactions" string="Select Transactions" type="object" class="oe_highlight"/>
                    </header>
                    <field name="type"/>
                    <field name="date"/>
                    <field name="datetime"/>
                    <field name="cashbox_id"/>
                    <field name="category_id"/>
                    <field name="narration"/>
                    <field name="amount"/>
                </tree>
            </field>
        </record>


        <record id="view_cash_transactions_wags_tree" model="ir.ui.view">
            <field name="name">view_cash_transactions_wags_tree</field>
            <field name="model">cash.transactions.wags</field>
            <field name="arch" type="xml">
                <tree string="Cash Transactions">
                    <field name="reference" decoration-danger="alert == True"/>
                    <field name="type" decoration-danger="alert == True"/>
                    <!-- <field name="date" decoration-danger="alert == True"/> -->
                    <field name="datetime" decoration-danger="alert == True"/>
                    <field name="cashbox_id" decoration-danger="alert == True"/>
                    <field name="category_id" decoration-danger="alert == True"/>
                    <field name="narration" decoration-danger="alert == True"/>
                    <field name="amount" decoration-danger="alert == True" sum="total"  />
                     <field name="alert" invisible="1"/>
                    <!-- <field name="state" widget="badge" decoration-success="state == 'posted'"
                           decoration-muted="state == 'draft'"/> -->
                </tree>
            </field>
        </record>

        <record id="view_cash_transactions_wags_form" model="ir.ui.view">
            <field name="name">view_cash_transactions_wags_form</field>
            <field name="model">cash.transactions.wags</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Cash Transactions">
                    <header>
                        <!-- <button name="post" string="Post" states="draft" type="object" class="oe_highlight"/>
                        <button name="button_cancel" states="posted,draft" string="Cancel Entry" type="object"/>
                        <field name="state" widget="statusbar"/> -->
                    </header>
                    <sheet>
                        <div class="oe_button_box" align="right">
                        </div>
                        <h1>
                            <field name="reference" readonly="1" sring="Reference" force_save="1" invisible="1"/>
                        </h1>
                        <group>
                            <group>
                                <field name="date"/>
                                <field name="datetime"/>
                                <field name="type" required="1"/>
                                <field name="narration" />
                                <field name="cash_id" />
                                <field name="alert" />
                                <field name="company_id" readonly="1" force_save="1"/>

                            </group>
                            <group>
                                <field name="category_id" required="1"/>
                                <field name="cashbox_id"/>
                                <field name="branch_id"/>
                                <field name="amount"/>
                                <field name="create_uid" widget="many2one_avatar_user"/>
                                <field name="attachment" filename="attachment_name"/>
                                <field name="attachment_name" invisible="1"/>
                                <field name="pos_session_id" readonly="1" force_save="1"/>
                                <field name="cash_closing_id" readonly="1" force_save="1"/>
                                <field name="account_id"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>



        <record id="view_pos_cash_closing_wags_tree_inherit" model="ir.ui.view">
            <field name="name">view.cash.closing.wags.tree.inherit</field>
            <field name="model">cash.closing.wags</field>
            <field name="inherit_id" ref="pos_wags.view_pos_cash_closing_wags_tree"/>
            <field name="arch" type="xml">
                
                <xpath expr="//field[@name='branch_id']" position="after">
                    <field name="opening_cash_id"/>
                    <field name="closing_cash_id"/>
                </xpath>
            </field>
        </record>

        <record id="view_cash_closing_wags_inherit" model="ir.ui.view">
            <field name="name">view.cash.closing.wags.form.inherit</field>
            <field name="model">cash.closing.wags</field>
            <field name="inherit_id" ref="pos_wags.view_pos_cash_closing_wags_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='branch_id']" position="after">
                    <field name="opening_cash_id" attrs="{'readonly': [('state','=','validate')]}" domain="[('type', '=', 'open'),('cash_closing_id', '=', False),('cashbox_id', '=', cashbox_id)]"/>
                    <field name="opening_datetime" force_save="1" readonly="1"/>
                </xpath>
                <xpath expr="//header" position="inside">
                    <button name="action_draft" string="Draft" type="object"
                            class="btn-primary" attrs="{'invisible': [('state','=','draft')]}"/>
                    <button name="action_validate" string="Validate" type="object"
                            class="btn-primary" attrs="{'invisible': [('state','=','validate')]}"/>
                </xpath>
                <xpath expr="//field[@name='cashbox_id']" position="after">
                    <field name="closing_cash_id" attrs="{'readonly': [('state','=','validate')]}" domain="[('type', '=', 'close'),('cash_closing_id', '=', False),('cashbox_id', '=', cashbox_id)]"/>
                    <field name="closing_datetime" force_save="1" readonly="1"/>
                </xpath>
                <xpath expr="//field[@name='cash_account_id']" position="after">
                    <field name="account_id" invisible="1"/>
                    <field name="pay_in_account_id" attrs="{'readonly': [('state','=','validate')]}"/>
                    <field name="pay_out_account_id" attrs="{'readonly': [('state','=','validate')]}"/>
                    <field name="cash_difference_entry" readonly="1" force_save="1"/>
                    <field name="cashin_journal_id" readonly="1" force_save="1"/>
                    <field name="cashout_journal_id" readonly="1" force_save="1"/>
                </xpath>
            </field>
        </record>

        <record id="seq_cash_transactions" model="ir.sequence">
            <field name="name">Cash Transactions Sequence</field>
            <field name="code">cash.transactions.sequence</field>
            <field name="prefix">CT - </field>
            <field name="padding">4</field>
            <!-- <field name="company_id" eval="False"/> -->
        </record>


        <record model="ir.actions.act_window" id="action_cash_transactions">
            <field name="name">Cash Transactions</field>
            <field name="res_model">cash.transactions.wags</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="action_cash_type">
            <field name="name">Cash Type</field>
            <field name="res_model">cash.type.wags</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_cash_transactions" name="Cash Transactions" parent="pos_wags.menu_pos_wags_root" action="action_cash_transactions" sequence="20" groups="base_access_rights.admin_non_technical"/>

        <menuitem id="menu_cash_type" name="Cash Type" parent="pos_wags.menu_pos_configuration" action="action_cash_type" sequence="50" groups="base_access_rights.admin_non_technical"/>
    </data>
</odoo>