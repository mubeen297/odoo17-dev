<openerp>
    <data>
        
        <record id="machine_info_wags" model="ir.ui.view">
            <field name="name">machine_info_wags</field>
            <field name="model">machine.info</field>
            <field name="arch" type="xml">
                <form string="Bio Machine Attendance Error Form">

                    <header>
                        <button name="updateAttendanceAll_not_web" string="Attendance Not Web" type="object" class="btn-primary"/>
                    </header>
                    <group name="group_top"> 
                        <group name="group_left">
                            <field name="db"/>
                            <field name="odooLogin"/>
                            <field name="odooPasswd"/>
                            <field name="company_id" readonly="1" force_save="1"/>
                        </group>
                        <field name="product_ids" nolabel='1'>
                            <tree  editable="bottom">

                                <field name="ip" required="1"/>                            
                                <field name="port"/>                            
                                <field name="des"/>                            
                                <field name="status"/>
                                <field name="status_web"/>
                                <field name="machine_no" invisible="1"/>
                                <field name="company_id" invisible="1" />  
                            </tree>
                        </field>
                    </group> 
                </form>
            </field>
        </record>

        <record id="machine_info_wags_tree" model="ir.ui.view">
            <field name="name">machine_info_wags_tree</field>
            <field name="model">machine.info</field>
            <field name="arch" type="xml">
                <tree string="Machine Info">
                    <field name="db"/>
                </tree>
            </field>
        </record>


        <record model="ir.actions.act_window" id="machine_info_wags_menu_action">
            <field name="name">Bio Machine Info</field>
            <field name="res_model">machine.info</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('machine_info_wags_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('machine_info_wags')})]"/>
        </record>



        <menuitem name="Bio Machines Config" parent="attendance_wags.menu_hr_attendance_root_wags" action="machine_info_wags_menu_action" id="bio_machine_wags" groups="base_access_rights.admin_non_technical"/>

    </data>
</openerp>
