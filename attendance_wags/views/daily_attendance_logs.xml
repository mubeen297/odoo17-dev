<odoo>
    <data>
        
        <record id="view_daily_attendance_logs_wags_tree" model="ir.ui.view">
            <field name="name">view_daily_attendance_logs_wags_tree</field>
            <field name="model">daily.attendance.logs.wags</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Daily Attendance Logs" create="false" delete="false" duplicate="false" >
                    <field name="date"/>
                    <field name="user_id"/>
                    <field name="employee_id"/>
                    <field name="checkin"/> 
                    <field name="checkout"/> 
                    <field name="total_time"/> 
                    <field name="attendance_status"/>     
                </tree>
            </field>
        </record>

        <record id="view_daily_attendance_logs_wags_search" model="ir.ui.view">
            <field name="name">view_daily_attendance_logs_wags_search</field>
            <field name="model">daily.attendance.logs.wags</field>
            <field name="arch" type="xml">
                <search string="Daily Attendance Logs">
                    <field name="user_id"/>
                    <field name="employee_id" string="Employee"/>
                    <field name="checkin" string="Checkin"/>
                    <field name="checkout" string="Checkout"/>
                    <field name="date" string="Today Date" filter_domain="[('date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                    <group col="8" colspan="4" expand="0" string="Group By">
                        <filter string="Employees" name="employee_id" context="{'group_by':'employee_id'}"/>
                        <filter string="Users" name="user_id" context="{'group_by':'user_id'}"/>
                    </group>
                    <filter string="Today" name="filter_today" domain="[('date','=',datetime.date.today())]" />
                </search>
            </field>
        </record> 

        <record id="view_daily_attendance_logs_wags_form" model="ir.ui.view">
            <field name="name">view_daily_attendance_logs_wags_form</field>
            <field name="model">daily.attendance.logs.wags</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Daily Attendance Logs" create="false" delete="false" duplicate="false">
                    <header>
                        <button name="update_holidays" string="Update Holiday" type="object" class="btn btn-primary " />
                        <!-- <button name="update_punch_details" string="Update Punch Details" type="object" class="btn-primary"/> -->
                        <!-- <button name="update_attendance" string="Update Attendance" type="object" class="btn btn-primary" /> -->
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="user_id" readonly="1" force_save="1"/>
                                <field name="employee_id" readonly="1" force_save="1"/>
                                <field name="shift_id" options="{'no_create':True}" readonly="1" force_save="1"/>
                                <field name="attendance_status" readonly="1" force_save="1"/>
                                <field name="company_id" readonly="1" force_save="1"/>
                            </group>
                            <group>
                                <field name="date" readonly="1" force_save="1"/>
                                <!-- <field name="early"/> -->
                                <!-- <field name="late"/> -->
                                <field name="checkin" readonly="1" force_save="1"/>
                                <field name="checkout" readonly="1" force_save="1"/>
                                <field name="total_time" widget="float_time" readonly="1" force_save="1"/>
                                <field name="holiday_ref" readonly="1" force_save="1"  />
                                <field name="national_holiday" readonly="1" force_save="1"  />
                            </group>
                        </group>
                        <separator string="Punch Attendance"/>
                        <field name="raw_attendance_ids" readonly="1" force_save="1">
                            <tree string="Punch Attendance">
                                <field name="employee_id"/> 
                                <field name="user_id"/>
                                <field name="date"/>
                                <field name="checkin" optional="hide"/>
                                <field name="checkout" optional="hide"/>
                                <field name="requested_checkin" optional="show"/>
                                <field name="requested_checkout" optional="show"/>
                                <field name="final_checkin" optional="show"/>
                                <field name="final_checkout" optional="show"/>
                            </tree>
                        </field>
                    </sheet>
                    <!-- Chatter -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

    </data>
</odoo>