<odoo>
    <data>
        
        <record id="view_attendance_shift_wags_search" model="ir.ui.view">
            <field name="name">view_attendance_shift_wags_search</field>
            <field name="model">attendance.shift.wags</field>
            <field name="arch" type="xml">
                <search string="Attendance Shifts">
                    <field name="shift_name"/>
                    <group col="8" colspan="4" expand="0" string="Group By">
                        <filter string="Date" name="date" context="{'group_by':'date'}"/>
                        <filter string="Working Hours" name="working_hours" context="{'group_by':'working_hours'}"/>
                    </group>
                </search>
            </field>
        </record> 

        <record id="view_attendance_shift_wags_tree" model="ir.ui.view">
            <field name="name">view_attendance_shift_wags_tree</field>
            <field name="model">attendance.shift.wags</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Attendance Shifts">
                    <field name="shift_name"/>
                    <field name="shift_name"/>
                    <field name="intime"/>
                    <field name="outtime"/>
                </tree>
            </field>
        </record>

        <record id="view_attendance_shift_wags_form" model="ir.ui.view">
            <field name="name">view_attendance_shift_wags_form</field>
            <field name="model">attendance.shift.wags</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Attendance Shifts">
                    <sheet>
                        <group>
                            <group>
                                <field name="shift_name" required="1"/>
                                <field name="name" readonly="1" force_save="1"/>
                                <field name="rec_name" readonly="1" force_save="1" invisible="1"/>
                                <field name="lavy_in" invisible="1"/>
                                <field name="company_id" readonly="1" force_save="1"/>
                            </group>
                            <group>
                                <field name="intime" widget="float_time" string="In Time"/> 
                                <field name="outtime" widget="float_time" string="Out Time"/>
                                <field name="lavy_out" invisible="1" />
                                <field name="working_hours" readonly="1" force_save="1"  widget="float_time"/>
                                <field name="overlapping"/>
                            </group>
                        </group> 
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>


        <record id="hr_employees_wags_shifts_ext" model="ir.ui.view">
            <field name="name">hr_employees_wags_shifts_ext</field>
            <field name="model">hr.employee.wags</field>
            <field name="inherit_id" ref="hr_employee_wags.view_hr_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='attendance_pin']" position="after">
                    <field name="shift_ids" options="{'no_create':True}" widget="many2many_tags" force_save="1" readonly="1"/>
                </xpath>
                
            </field>
        </record>

    </data>
</odoo>