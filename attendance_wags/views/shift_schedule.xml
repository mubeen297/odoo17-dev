        <record id="view_shift_attendance_tree" model="ir.ui.view">
            <field name="name">shift.attendance.tree</field>
            <field name="model">shifts.attendance</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Attendance Shifts">
                    <field name="name"/>
                    <field name="shift_name"/>
                    <field name="intime"/>
                    <field name="outtime"/>
                </tree>
            </field>
        </record>
        <record id="view_shift_attendance_form" model="ir.ui.view">
            <field name="name">shift.attendance.form</field>
            <field name="model">shifts.attendance</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Attendance Shifts">
                    <group>
                        <group>
                            <field name="shift_name"/>
                            <field name="intime" widget="float_time"/> 
                            <field name="outtime" widget="float_time"/> 
                            <field name="active"/> 
                        </group>
                        <group>
                            <field name="is_management"/>
                            <field name="is_universal"/> 
                            <field name="shift_hours"/> 
                            <field name="is_8_hour_shift"/> 
                            <field name="is_overlap_shift"/> 
                            <field name="rec_name" invisible="1"/>
                            <field name="name" invisible="1"/>
                            <field name="company_id" readonly="1" force_save="1"/>

                        </group>
                    </group> 
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div> 
                </form>
            </field>
        </record>
