        <record id="view_holiday_attendance_tree" model="ir.ui.view">
            <field name="name">holiday.attendance.tree</field>
            <field name="model">holidays.attendance</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Attendance Holidays">
                    <field name="year"/>
                    <field name="stages"/>
                </tree>
            </field>
        </record>
        <record id="view_holiday_attendance_form" model="ir.ui.view">
            <field name="name">holiday.attendance.form</field>
            <field name="model">holidays.attendance</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Attendance Holidays">
                    <header>
                        <button name="get_sundays" invisible="1" string="Get Sundays" type="object" class="btn-primary" attrs="{'invisible': [('stages','in', ('validated','done'))]}"/>
                        <button name='get_holidays' invisible="1" string="Get Holidays" type="object" class="btn-primary" attrs="{'invisible': [('stages','in', ('validated','done'))]}" />
                        <button name="draft" string="Draft" type="object" class="btn-primary" attrs="{'invisible': [('stages','!=','validated')]}"/>
                        <button name="validate" string="Validate" type="object" class="btn-primary" attrs="{'invisible': [('stages','in', ('validated','done'))]}"/>
                        <button name="done" string="Done" type="object" class="btn-primary" attrs="{'invisible': [('stages','in', ('draft','done'))]}"/>
                        <field name="stages" widget="statusbar" statusbar_visible="draft,validated,done"/>                      
                    </header>
                    <group>
                        <group>
                            <field name="year" attrs="{'readonly': [('stages','!=', 'draft')]}"/>
                            <field name="description" placeholder="e.g" attrs="{'readonly': [('stages','!=', 'draft')]}"/>
                        </group>
                        <group>
                            <field name="days" invisible="1" string="Days"  widget="many2many_tags" attrs="{'readonly': [('stages','!=', 'draft')]}" />
                            <field name="default_holiday" invisible="1" string="Default Holiday" attrs="{'readonly': [('stages','!=', 'draft')]}" />
                            <field name="company_id" readonly="1" force_save="1"/>
                        </group>
                        
                    </group>
                    <field name="holidays_tree" attrs="{'readonly': [('stages','!=', 'draft')]}" >
                        <tree editable="bottom" nolabel="1">
                            <field name="date"/>
                            <field name="day"/>
                            <field name="remarks"/>
                            <field name="company_id" invisible="1" /> 
                            
                        </tree>

                    </field>
                </form>
            </field>
        </record>
