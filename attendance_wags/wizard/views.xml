<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_daily_attendance_logs_wizard_form" model="ir.ui.view">
            <field name="name">daily.attendance.logs.wizard.form</field>
            <field name="model">daily.attendance.logs.wizard</field>
            <field name="arch" type="xml">
                <form string="Create Daily Logs">
                    <sheet>
                        <group>
                            <group>
                                <field name="date" required="1"/>
                            </group>
                            <group>
                                <field name="year" readonly="1" force_save="1"/>
                            </group>
                        </group>
                        
                    </sheet>
                    <footer>
                        <button class="oe_highlight" type="object" name="create_daily_logs" string="Create Daily Logs" data-hotkey="a"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>